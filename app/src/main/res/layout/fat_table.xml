<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <!-- Table Heading -->

        <TableRow android:background="@drawable/bar">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Men"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Women"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Essential Fat"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 - 5 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10 - 13 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />



        </TableRow>
        <TableRow android:background="#564B80B2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Athletes"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6 - 13 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="14 - 20 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />



        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fitness"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="14 - 17 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="21 - 24 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

        </TableRow>

        <TableRow android:background="#564B80B2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Acceptable"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="18 - 24 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="25 - 31 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Obesity"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="> 25 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="> 32 %"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

        </TableRow>

    </TableLayout>

</RelativeLayout>